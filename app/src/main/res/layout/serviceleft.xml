<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linLeft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <com.sht.smartlock.ui.activity.myview.MyImagView
        android:id="@+id/ivChatRoom"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_chatting_room"
        app:layout_heightPercent="22%" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/HotelTimeBg" />
        <RelativeLayout
            android:id="@+id/relChatHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMessage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/icon_messages"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ivMessage"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="@color/TextBlack087"
                android:paddingTop="5dp"
                android:text="我的信息"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMyChatNum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/tvMessage"
                android:background="@drawable/bgnumber"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/pic_errow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_heightPercent="2.4%w"
            android:background="@color/HotelTimeBg" />

        <com.sht.smartlock.ui.activity.myview.MyListView
            android:id="@+id/lvChatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/line_702"
            android:visibility="gone"></com.sht.smartlock.ui.activity.myview.MyListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tvOftenServicer"
                android:src="@drawable/icon_services_1" />

            <TextView
                android:id="@+id/tvOftenServicer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="6dp"
                android:text="常用服务"
                android:textColor="@color/TextBlack054"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_702" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/ivShopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gotoshoppong"
                app:layout_heightPercent="21%w"
                app:layout_widthPercent="8%w" />

            <ImageView
                android:id="@+id/ivFoods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gotofoods"
                app:layout_heightPercent="21%w"
                app:layout_widthPercent="8%w" />

            <ImageView
                android:id="@+id/ivNoCallMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/notakeme"
                app:layout_heightPercent="21%w"
                app:layout_widthPercent="8%w" />


            <ImageView
                android:id="@+id/icCallMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gotocallme"
                app:layout_heightPercent="21%w"
                app:layout_widthPercent="8%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_heightPercent="2.4%w"
            android:background="@color/HotelTimeBg" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            app:layout_paddingBottomPercent="2%w"
            >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_heightPercent="8%w"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tvOtherServicer"
                android:src="@drawable/icon_service_2" />

            <TextView
                android:id="@+id/tvOtherServicer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="6dp"
                app:layout_paddingPercent="1.8%w"
                android:text="个性服务"
                android:textColor="@color/TextBlack054"
                android:textSize="14sp" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_702" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="6dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
            <ImageView
                android:id="@+id/ivClean"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/gotoclar"
                app:layout_heightPercent="72%w"
                app:layout_widthPercent="72%"
                />
            <ImageView
                android:id="@+id/ivCleanMsg"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="56dp"
                android:src="@drawable/pic_tips_message"
                />
            </com.zhy.android.percent.support.PercentFrameLayout>
            <View
                android:layout_width="36dp"
                android:layout_height="20dp"
                app:layout_heightPercent="20%w"/>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
            <ImageView
                android:id="@+id/ivChang"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                app:layout_heightPercent="72%w"
                app:layout_widthPercent="72%"
                android:src="@drawable/gochang"
                 />

                <ImageView
                    android:id="@+id/ivChangMsg"
                    android:visibility="gone"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/pic_tips_message"
                    />
            </com.zhy.android.percent.support.PercentFrameLayout>
            <View
                android:layout_width="36dp"
                android:layout_height="20dp"
                app:layout_heightPercent="20%w"/>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
            <ImageView
                android:id="@+id/ivOtherServicer"
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:layout_heightPercent="72%w"
                app:layout_widthPercent="72%"
                android:src="@drawable/otherservicer"
                />

                <ImageView
                    android:id="@+id/ivOtherMsg"
                    android:visibility="gone"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/pic_tips_message"
                    />
            </com.zhy.android.percent.support.PercentFrameLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/HotelTimeBg"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
