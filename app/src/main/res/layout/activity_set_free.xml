<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.sht.smartlock.ui.activity.mine.SetFreeActivity">

    <include layout="@layout/title_panel"
        android:id="@+id/include" />

    <View
        android:id="@+id/vSetFree"
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_gray"
        android:layout_below="@+id/include"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/vSetFree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免打扰设置"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <ToggleButton
            android:id="@+id/togStateType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/togglebutton_style"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</RelativeLayout>
