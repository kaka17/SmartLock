    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="0.1%"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_gray"/>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center"
            android:text="@string/mation_alerttone"
            app:layout_textSizePercent="4%w"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <ToggleButton
            android:id="@+id/tgButtonAlert_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="75%"
            app:layout_widthPercent="18%"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:checked="true"
            android:textOn=""
            android:textOff=""
            android:layout_marginBottom="3dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/togglebutton_style"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="0.1%"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_gray"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center"
            android:text="@string/mation_circularmotion"
            app:layout_textSizePercent="4%w"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <ToggleButton
            android:id="@+id/tgButtonCircular_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="75%"
            app:layout_widthPercent="18%"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:checked="true"
            android:textOn=""
            android:textOff=""
            android:layout_marginBottom="3dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/togglebutton_style"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--<ToggleButton-->
            <!--android:id="@+id/tgButtonCircular_motion"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_heightPercent="80%"-->
