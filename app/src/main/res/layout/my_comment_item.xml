<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTimeDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="时间日期"/>
<!--
    <TextView
        android:id="@+id/tvEvaluation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="评价"
        />
-->
    <TextView
        android:id="@+id/tvData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="内容"/>

    <RelativeLayout
        android:id="@+id/relateCenter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_Hotel_Comment"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/image_Hotel_Comment">
            <TextView
                android:id="@+id/tv_Hotel_CommentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="酒店名称" />

            <ImageView
                android:id="@+id/ivMyCommentWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_Hotel_CommentName"
                android:layout_alignLeft="@+id/tv_Hotel_CommentName"
                android:layout_alignStart="@+id/tv_Hotel_CommentName" />

            <ImageView
                android:id="@+id/ivMyCommentStopCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stopcar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivMyCommentWifi"
                android:layout_below="@+id/tv_Hotel_CommentName" />

            <ImageView
                android:id="@+id/ivMyCommentUserHeadX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userheadx"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivMyCommentStopCar"
                android:layout_below="@+id/tv_Hotel_CommentName"/>

            <TextView
                android:id="@+id/tv_Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20人点评"
                android:layout_below="@+id/tv_Hotel_CommentName"
                android:layout_toRightOf="@+id/ivMyCommentUserHeadX"
                android:layout_toEndOf="@+id/ivMyCommentUserHeadX" />


            <TextView
                android:id="@+id/tv_HotelComment_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南山大道208街"
                android:layout_below="@+id/image_HotelComment_RightArrow"
                android:layout_alignLeft="@+id/ivMyCommentWifi"
                android:layout_alignStart="@+id/ivMyCommentWifi" />

            <ImageView
                android:id="@+id/image_HotelComment_RightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/top_Line_Collection"
        android:layout_width="340dp"
        android:layout_height="1px"
        android:background="@color/light_gray"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/relateCenter"/>


</LinearLayout>