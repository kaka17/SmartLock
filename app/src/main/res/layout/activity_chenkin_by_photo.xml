<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gif="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.sht.smartlock.ui.activity.ChenkinByPhotoActivity">
    <RelativeLayout
        android:id="@+id/myrelat"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_title_height"
        style="@style/MainTabBg" >

        <ImageView
            android:id="@+id/img_back"
            android:background="@drawable/common_tab_bg"
            android:src="@drawable/btn_off"
            style="@style/goback"
            android:onClick="onBack"
            />

        <TextView
            android:id="@+id/tv_title"
            style="@style/words"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="自助拍照认证" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@color/white"
                />
        <FrameLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <com.sht.smartlock.ui.activity.myview.CameraSurfaceView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <com.sht.smartlock.ui.activity.myview.RectOnCamera
                android:id="@+id/rectCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/PhotoCircle01"
                android:gravity="center_horizontal"
                android:visibility="visible"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        />
                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        >
                        <ImageView
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/pic_frame_photo3"
                            />
                        <ImageView
                            android:id="@+id/ivImg"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:src="@drawable/icon"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:layout_marginBottom="20dp"
                            />
                        <com.sht.smartlock.ui.activity.myview.MyGiftView
                            android:id="@+id/gif1"
                            gif:gif="@raw/pic_verifying"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:enabled="false" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
            </LinearLayout>


        </FrameLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@color/white"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请将脸对入识别区后点击下面按钮"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textColor="@color/OenDoorsTitle54"
                />
            <ImageView
                android:id="@+id/ivTakePhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_takephoto"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
