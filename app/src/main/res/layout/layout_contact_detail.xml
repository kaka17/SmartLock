<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="130.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="130.0dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/personal_center_bg"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/desc"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:contentDescription="desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:paddingTop="20dp" >

                <com.sht.smartlock.phone.ui.chatting.base.EmojiconTextView
                    android:id="@+id/contact_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="{name}"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/contact_numer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="number"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/entrance_chat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/LargePadding"
            android:layout_marginRight="@dimen/LargePadding"
            android:layout_marginTop="@dimen/LargestPadding"
            style="@style/CCPBigRedButton"
            android:gravity="center"
            android:textSize="18.0dip"
            android:text="@string/entrance_chat_tips"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/entrance_voip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/LargePadding"
            android:layout_marginRight="@dimen/LargePadding"
            android:layout_marginTop="@dimen/LargestPadding"
            style="@style/CCPBigRedButton"
            android:gravity="center"
            android:textSize="18.0dip"
            android:text="@string/entrance_voip_chat_tips"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>