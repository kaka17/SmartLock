<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.sht.smartlock.ui.activity.booking.DetailServicerInfoActivity">

    <RelativeLayout
        android:id="@+id/myrelat"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_title_height"
        style="@style/MainTabBg" >

        <ImageView
            android:id="@+id/img_back"
            android:background="@drawable/common_tab_bg"
            android:src="@drawable/btn_back"
            style="@style/goback"
            android:onClick="onBack"
            />

        <TextView
            android:id="@+id/tv_title"
            style="@style/words"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="更多详情" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/couponsitembg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tvLockName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="维也纳NH酒店"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="@color/TextBlack087"
            />
        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_adr_hotel"
            android:layout_toLeftOf="@+id/ivCall"
            android:layout_marginRight="10dp"
            />
         <ImageView
            android:id="@+id/ivCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_call_info"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/couponsitembg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可提供的服务"
        android:layout_marginLeft="12dp"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/TextBlack087"
        />
    <com.sht.smartlock.ui.activity.myview.NoScroolGridView
        android:id="@+id/gvServicer"
        android:visibility="visible"
        android:numColumns="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.sht.smartlock.ui.activity.myview.NoScroolGridView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/btn_more"
            android:layout_centerHorizontal="true"
            />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_w540"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="酒店介绍"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/TextBlack087"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开业时间"
            android:textColor="@color/TextBlack054"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/05/09"
            android:layout_marginLeft="16dp"
            android:textColor="@color/TextBlack054"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginRight="12dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间总数"
            android:textColor="@color/TextBlack054"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/tvRoomNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120间"
            android:textColor="@color/TextBlack054"
            android:textSize="16sp"
            />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="15sp"
        android:textColor="@color/TextBlack087"
        android:paddingBottom="15dp"
        android:text="酒店开始萨尔啊阿嘎多噶尔塔尔他都阿达尔阿尔塔二塘阿嘎二恶按个人阿嘎儿啊age敢玩儿"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/couponsitembg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客户评价"
        android:layout_marginLeft="12dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/TextBlack087"
        />
    <com.sht.smartlock.ui.activity.myview.MyListView
        android:id="@+id/lvComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.sht.smartlock.ui.activity.myview.MyListView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
