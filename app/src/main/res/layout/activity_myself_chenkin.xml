<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sht.smartlock.ui.activity.MyselfChenkinActivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/myrelat"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_title_height"
        style="@style/MainTabBg" >

        <ImageView
            android:id="@+id/img_back"
            android:background="@drawable/common_tab_bg"
            android:src="@drawable/btn_back"
            style="@style/goback"
            android:onClick="onBack"
            />

        <TextView
            android:id="@+id/tv_title"
            style="@style/words"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="@string/door_Myself_chenkin" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/myrelat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="该酒店可以自助 入住，无需到前台登记入住"
            android:id="@+id/tv_Content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:text="确定入住"
            android:id="@+id/tv_sure"
            android:background="@drawable/order_dialog_background"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </LinearLayout>



</RelativeLayout>
