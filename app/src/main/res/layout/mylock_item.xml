<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/common_tab_item_bg"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dg"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:id="@+id/tv_Many_Person"
                app:layout_textSizePercent="8%w"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/online"
                android:layout_marginTop="3dp"
                style="@style/MyLock_item"
                app:layout_textSizePercent="8%w"
                 />

        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdgfgd"
                style="@style/MyLock_item"
                android:id="@+id/tv_LockName"
                app:layout_textSizePercent="10%w"
                android:singleLine="true"
                />



        </com.zhy.android.percent.support.PercentLinearLayout>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:text="adgdd"
            android:textColor="@color/ChatRoom_Distanter"
            android:textSize="14sp"
            android:id="@+id/tv_Lock_Distance"
            android:singleLine="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <ImageView
        android:src="@drawable/create_group"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:paddingBottom="1dp"
        android:layout_marginRight="15dp"
        android:id="@+id/iv_lock_logo" />
    </LinearLayout>


    <View
        android:id="@+id/view_enpty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ViewBg">
    </View>

</com.zhy.android.percent.support.PercentLinearLayout>
