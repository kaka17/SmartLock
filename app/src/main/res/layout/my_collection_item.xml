<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">



        <ImageView
            android:id="@+id/image_Hotel_Collection"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/image_Hotel_Collection">
            <TextView
                android:id="@+id/tv_Hotel_CollectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="酒店名称" />

            <ImageView
                android:id="@+id/ivMyCollectionWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_Hotel_CollectionName"
                android:layout_alignLeft="@+id/tv_Hotel_CollectionName"
                android:layout_alignStart="@+id/tv_Hotel_CollectionName" />

            <ImageView
                android:id="@+id/ivMyCollectionStopCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stopcar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivMyCollectionWifi"
                android:layout_below="@+id/tv_Hotel_CollectionName" />

            <ImageView
                android:id="@+id/ivMyCollectionHeadX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userheadx"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivMyCollectionStopCar"
                android:layout_below="@+id/tv_Hotel_CollectionName"/>


            <TextView
                android:id="@+id/tv_Hotel_Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20人点评"
                android:layout_below="@+id/tv_Hotel_CollectionName"
                android:layout_toRightOf="@+id/ivMyCollectionHeadX"
                android:layout_toEndOf="@+id/ivMyCollectionHeadX" />


            <TextView
                android:id="@+id/tv_Hotel_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南山大道208街"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/image_Hotel_RightArrow"
                android:layout_alignLeft="@+id/ivMyCollectionWifi"
                android:layout_alignStart="@+id/ivMyCollectionWifi" />

            <ImageView
                android:id="@+id/image_Hotel_RightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    <View
        android:id="@+id/top_Line_Collection"
        android:layout_width="340dp"
        android:layout_height="1px"
        android:background="@color/light_gray"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_Hotel_Collection"/>

</RelativeLayout>