<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_widthPercent="18%"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_widthPercent="75%"
        android:background="@drawable/order_dialog_background"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定手机号码"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#333333"
            android:id="@+id/tv_Order"
            android:paddingBottom="10dp"
            />
        <EditText
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:hint="请输入电话"
            />
        <EditText
            android:layout_width="160dp"
            android:layout_height="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/opendoor_dialog_line"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="20dp"
                android:textColor="@color/top_bar_normal_bg"
                android:text="@string/dialog_opendoor_cancel"
                android:id="@+id/tv_No" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/opendoor_dialog_line"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="20dp"
                android:textColor="@color/top_bar_normal_bg"
                android:text="@string/dialog_opendoor_sure"
                android:id="@+id/tv_Sure" />
        </LinearLayout>
    </LinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
