<com.zhy.android.percent.support.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/relateBill"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_title_height"
        android:layout_centerHorizontal="true"
        style="@style/MainTabBg"
        >

        <ImageView
            android:id="@+id/btnBillCancle"
            android:clickable="true"
            style="@style/goback"
            android:src="@drawable/btn_back"
            android:background="@drawable/common_tab_bg"
            />


        <TextView
            android:id="@+id/tvTitlePanelBill"
            style="@style/titlename"
            android:layout_centerInParent="true"
            android:text="@string/mation_titleCode"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/vLineBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="3%w"
        android:background="@color/bg_touch"
        android:layout_below="@+id/relateBill"/>
<FrameLayout
    android:id="@+id/flINFo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/vLineBill"
    app:layout_heightPercent="24%w"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line_time"
        android:layout_marginTop="24dp"
        />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/relBillType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="24%w"
        android:orientation="horizontal"
        android:layout_below="@+id/vLineBill">
        
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_widthPercent="10%w"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBillType1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_time_highlight"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvBillType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/ivBillType1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/bill_top_color"
                android:layout_marginTop="12dp"
                android:text="近1月"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_widthPercent="10%w"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBillType2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_time_dim"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvBillType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/ivBillType2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="本季度"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_widthPercent="10%w"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBillType3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_time_dim"

                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvBillType3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/ivBillType3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="上季度"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_widthPercent="10%w"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBillType4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_time_dim"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvBillType4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/ivBillType4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="全部"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>

</FrameLayout>

    <View
        android:id="@+id/vLineBill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="3%w"
        android:background="@color/bg_touch"
        android:layout_below="@+id/relBillType"/>
    <RelativeLayout
        android:id="@+id/reEnpty"
        android:layout_below="@+id/vLineBill1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:src="@drawable/pic_anime_failed"
        />
    </RelativeLayout>
    <View
        android:id="@+id/vLineBillBommt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="3%w"
        android:background="@color/bg_touch"
        android:layout_below="@+id/flINFo"/>
    <ListView
        android:id="@+id/lvBill"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/vLineBillBommt"/>

</com.zhy.android.percent.support.PercentRelativeLayout>
